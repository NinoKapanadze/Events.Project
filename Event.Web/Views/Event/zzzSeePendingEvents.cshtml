@page
@model List<Events.Application.Eventz.Models.EventDeepLookModel>

<h1>Pending Events</h1>
@try
{
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Number of Tickets</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.StartDate.ToString("dddd, dd MMMM yyyy")</td>
                        <td>@item.EndDate.ToString("dddd, dd MMMM yyyy")</td>
                        <td>@item.NumOfTicket</td>

                    </tr>
                    <tr class="nav-item">
                        <a class="btn btn-primary" asp-controller="Events" asp-action="ApproveEvent"> Approve Event  </a>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no events to display.</p>
    }
}
catch (Exception)
{
    <p>There are no pending events to display.</p>
}
