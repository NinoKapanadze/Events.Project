@page
@using Events.Application.Eventz;
@model IEnumerable<EventFirstLookModel>

<!DOCTYPE html>
<html>
<head>
    <title>All Events</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            margin-bottom: 10px;
        }
    </style>
</head>


<body>
    <h1>All Events</h1>
    @try {
        @foreach (var eventModel in Model)
        {
            <h2>@eventModel.Title</h2>
            <p>Start date: @eventModel.StartDate</p>
            <p>End date: @eventModel.EndDate</p>
            <p>Number of tickets: @eventModel.NumOfTicket</p>
        }

    }
    catch (Exception){}
    
</body>
</html>


